<%= form_for(@donation) do |f| %>
  First Name: &nbsp <%= f.text_field :first_name, placeholder: 'First Name', value: current_user.first_name, required: true %> <br>
  Last Name: &emsp;<%= f.text_field :last_name, placeholder: 'Last Name', value: current_user.last_name, required: true %><br>
  Phone: &emsp;&emsp;&emsp;<%= f.telephone_field :phone, placeholder: 'Phone Number', required: true  %><br>
  Pick Up Date: <%= f.date_field :pickup_date, required: true  %><br>
  Pick Up Time: <%= f.time_field :pickup_time, required: true  %><br>
  Region: &emsp;&emsp;&ensp;<%=f.select :region, [['North Queens'], ['South Queens'], ['Uptown'], ['Downtown'], ['Midtown'], ['Harlem'], ['Bronx'],['Staten Island']], :include_blank => true  %><br>
  Pick Up Location: &emsp;&emsp;&emsp;<%= f.text_area :pickup_location %><br>
  Donation Description: <%= f.text_area  :donation, placeholder: 'Please be specific so runner and distributor can porperly prepare', required: true %><br>
  Runner: <br>

  <br>
  <%= f.submit %>
<% end %>
