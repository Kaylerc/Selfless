<style>
  #map {
    height: 50vh;
  }
</style>

<div id ="map"></div>
<script>
  var map;
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: <%= @donation.latitude %>, lng: <%= @donation.longitude %> },
      zoom: 17
    });

    var marker = new google.maps.Marker({
          map: map,
          position: {lat: <%= @donation.latitude %>, lng: <%= @donation.longitude %> },
          title: 'Hello World!'
        });

  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_ENV_KEY'] %>&callback=initMap"></script>
