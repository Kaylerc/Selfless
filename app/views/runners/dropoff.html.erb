<!DOCTYPE html>
<html>
  <head>
    <style>
      #map {
        height: 60vh;
        width: 60vw;
        margin-left: 20%;
        margin-top: 5%; 
       }
    </style>
  </head>
  <body>

    <div id="map"></div>
    <script>
// Initialize and add the map
function initMap() {

  var dropoff = {lat: <%= @distribution.latitude %>, lng: <%= @distribution.longitude %> },

  var map = new google.maps.Map(
      document.getElementById('map'), {zoom: 17, center: dropoff});

  var marker = new google.maps.Marker({position: dropoff, map: map});
}
    </script>

    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_ENV_KEY'] %>&callback=initMap">
    </script>
  </body>
</html>
