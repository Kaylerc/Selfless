<style>
  #map {
    height: 60vh;
    width: 60vw;
    margin-left: 20%;
    margin-top: 5%;
  }
</style>

<div id ="map"></div>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_ENV_KEY'] %>&callback=initMap">
  var map;
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: <%= @distribution.latitude %>, lng: <%= @distribution.longitude %> },
      zoom: 17
    });

    var marker = new google.maps.Marker({
          map: map,
          position: {lat: <%= @distribution.latitude %>, lng: <%= @distribution.longitude %> },
          title: 'Hello World!'
        });
  }



</script>

<%end%>
