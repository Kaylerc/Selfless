<div>
  <body style="background-image: linear-gradient(to bottom right, var(--maino) , #cbcbcb)">
</div>

<h1 class="center">Select Donation and Distribution</h1>
  <!-- <div class="mainview"> -->
  <h2 class="center">Donation Pickups</h2>
    <div class="run-grid">
      <% @donations.each  do |d| %>
      <div class="run-cells">
        First Name: &emsp; &emsp;&emsp;<%= d.first_name %><br>
        Last Name: &emsp; &emsp;&emsp; <%= d.last_name %><br>
        Phone: &emsp; &emsp; &emsp; &emsp;&ensp;<%= d.phone %><br>
        Pick Up Date: &emsp;&emsp; <%= d.pickup_date %> <br>
        Pick Up Time: &emsp; &ensp; &nbsp <%= d.pickup_time %> <br>
        Region: &emsp; &emsp; &ensp;&emsp; &nbsp <%= d.region %> <br>
        Pick Up<br>Location: &emsp; &emsp; &ensp; <%= d.pickup_location %> <br>
        Donation: &emsp; &emsp; &ensp;<%= d.donation %> <br>
        <%= form_for(d) do |f| %>
          Runner: &emsp;&emsp;&emsp;&emsp;<%= f.collection_select :runner_id, Runner.all, :id, :first_name %> <br>
          <%= f.submit %>
        <% end %>
          </div>
      <% end %>
    </div>
  <!-- </div> -->

  <hr>


  <h2 class="center">Donation Dropoffs</h2>
    <div class="run-grid">
      <% @distributions.each  do |g| %>
      <div class="run-cells">
        Last Name: &emsp; &emsp;&emsp; <%= g.last_name %><br>
        First Name: &emsp; &emsp;&emsp;<%= g.first_name %><br>
        Phone: &emsp; &emsp; &emsp; &emsp;&ensp;<%= g.phone %><br>
        Drop Off Date: &emsp; <%= g.dropoff_date %> <br>
        Drop Off Time: &emsp; &nbsp<%= g.dropoff_time %> <br>
        Region: &emsp; &emsp; &ensp;&emsp; &ensp; <%= g.region %> <br>
        Drop Off<br>Location: &emsp; &emsp; &emsp; <%= g.dropoff_location %> <br>
        Distribution:  &emsp; &ensp;  <%= g.distribution %> <br>
        <%= form_for(g) do |f| %>
          Runner: &emsp;&emsp;&emsp;&emsp;&emsp;<%= f.collection_select :runner_id, Runner.all, :id, :first_name %>
          <%= f.submit %>
          <% end %>
      </div>
      <% end %>
    </div>
  <!-- </div> -->
</body>
</div>
