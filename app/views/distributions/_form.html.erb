<%= form_for(@distribution) do |f| %>
  First Name:  <%= f.text_field :first_name, placeholder: 'First Name', value: current_user.first_name, required: true, edit: false %><br>
  Last Name: <%= f.text_field :last_name, placeholder: 'Last Name', value: current_user.last_name, required: true %><br>
  Phone Numner: <%= f.telephone_field :phone, placeholder: 'Phone Number', required: true  %><br>
  Drop Off Date: <%= f.date_field :dropoff_date, required: true  %><br>
  Drop Off Time: <%= f.time_select :dropoff_time, ampm: true, required: true  %><br>
  Region: <%= f.select :region, [['North Queens'], ['South Queens'], ['Uptown'], ['Downtown'], ['Midtown'], ['Harlem'], ['Bronx'],['Staten Island']], :include_blank => true  %><br>
  Drop Off Location: <%= f.text_area :dropoff_location %><br>
  Distribution Description: <%= f.text_area  :distribution, placeholder: 'What do you have to distribute? (Please be specific so runner and donor can porperly prepare)', required: true %><br>
  Runner: <br><br>

    <%= f.submit %>
<% end %>
